{
  "name": "boilerplate-design-system",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/core/*"
    ]
  },
  "scripts": {
    "test": "jest --passWithNoTests --no-cache --runInBand --no-watchAll",
    "test:ci": "yarn types:check && jest --ci --coverage",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watch",
    "start:dev": "yarn storybook",
    "build:tokens": "turbo run build --filter=@bmg-ds/tokens",
    "build:storybook": "storybook build",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/register": "^7.22.15",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/addon-interactions": "^7.6.4",
    "@storybook/addon-links": "^7.6.4",
    "@storybook/blocks": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/react-webpack5": "^7.6.4",
    "@storybook/test": "^7.6.4",
    "@testing-library/react": "^14.1.2",
    "@types/babel__core": "^7",
    "@types/babel__register": "^7",
    "@types/jest": "^29.5.11",
    "@vanilla-extract/babel-plugin": "^1.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "storybook": "^7.6.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juniorconquista/boilerplate-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/juniorconquista/boilerplate-design-system/issues"
  },
  "homepage": "https://github.com/juniorconquista/boilerplate-design-system#readme",
  "engines": {
    "node": ">=14.17 <=20.x",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.0.2"
